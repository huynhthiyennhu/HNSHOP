@model HNSHOP.Dtos.Request.RegisterShopReqDto

@{
    ViewData["Title"] = "Đăng Ký Shop";
}
<link href="~/css/auth.css" rel="stylesheet">

<div class="register-container mt-5 mb-5">
    <h2 class="text-center">ĐĂNG KÝ SHOP</h2>

    <form asp-action="RegisterShop" method="post" class="register-form">
        @Html.AntiForgeryToken()

        <!-- Lỗi chung (ví dụ: Email đã tồn tại) -->
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <!-- Tên Shop -->
        <div class="input-group mb-1">
            <span class="input-icon"><i class="fa fa-cart-plus"></i></span>
            <input asp-for="Name" class="form-control" placeholder="Tên Shop" />
        </div>
        <span class="text-danger" asp-validation-for="Name"></span>

        <!-- Số điện thoại -->
        <div class="input-group mb-1">
            <span class="input-icon"><i class="fa fa-phone"></i></span>
            <input asp-for="Phone" type="tel" class="form-control" placeholder="Số điện thoại" />
        </div>
        <span class="text-danger" asp-validation-for="Phone"></span>

        <!-- Email -->
        <div class="input-group mb-1">
            <span class="input-icon"><i class="fa fa-envelope"></i></span>
            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
        </div>
        <span class="text-danger" asp-validation-for="Email"></span>

        <!-- Mật khẩu -->
        <div class="input-group mb-1">
            <span class="input-icon"><i class="fa fa-lock"></i></span>
            <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu (8 đến 20 ký tự)" id="passwordShop" />
            <span class="toggle-password" onclick="togglePassword('passwordShop','pwrs')">
                <i id="pwrs" class="fa fa-eye"></i>
            </span>
        </div>
        <span class="text-danger" asp-validation-for="Password"></span>

        <!-- Nhập lại mật khẩu -->
        <div class="input-group mb-1">
            <span class="input-icon"><i class="fa fa-lock"></i></span>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu" id="confirmPasswordShop" />
            <span class="toggle-password" onclick="togglePassword('confirmPasswordShop','pws')">
                <i id="pws" class="fa fa-eye"></i>
            </span>
        </div>
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

        <button type="submit" class="btn btn-primary w-100 mt-3">Đăng ký Shop</button>
    </form>

    <p class="text-center mt-2">Bạn đã có tài khoản? <a asp-action="Login">Đăng nhập ngay</a></p>
</div>

@section Scripts {
    <!-- bật validate client-side -->
    <partial name="_ValidationScriptsPartial" />
}
