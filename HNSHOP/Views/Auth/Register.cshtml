@model HNSHOP.Dtos.Request.RegisterReqDto

@{
    ViewData["Title"] = "Đăng Ký Tài Khoản";
}
<link href="~/css/auth.css" rel="stylesheet">

    <div class="register-container mt-5 mb-5">
    <h2 class="text-center">ĐĂNG KÝ</h2>

    <form asp-action="Register" method="post" class="register-form">
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Tên người dùng -->
        <div class="input-group">
            <span class="input-icon"><i class="fa fa-user"></i></span>
            <input asp-for="Name" class="form-control" placeholder="Tên" />
            @* <span asp-validation-for="Name" class="text-danger"></span> *@
        </div>

        <!-- Số điện thoại -->
        <div class="input-group">
            <span class="input-icon"><i class="fa fa-phone"></i></span>
            <input asp-for="Phone" type="tel" class="form-control" placeholder="Số điện thoại" />
            @* <span asp-validation-for="Phone" class="text-danger"></span> *@
        </div>

        <!-- Email -->
        <div class="input-group">
            <span class="input-icon"><i class="fa fa-envelope"></i></span>
            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
            @* <span asp-validation-for="Email" class="text-danger"></span> *@
        </div>

            <!-- Mật khẩu -->
            <div class="input-group">
                <span class="input-icon"><i class="fa fa-lock"></i></span>
                <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu (8 đến 20 ký tự)" id="password" />
            <span class="toggle-password" onclick="togglePassword('password','pwR')">
                    <i id="pwR" class="fa fa-eye"></i>
                </span>
                @* <span asp-validation-for="Password" class="text-danger"></span> *@
            </div>

            <!-- Nhập lại mật khẩu -->
            <div class="input-group">
                <span class="input-icon"><i class="fa fa-lock"></i></span>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu" id="confirmPassword" />
            <span class="toggle-password" onclick="togglePassword('confirmPassword','pwcf')">
                    <i id="pwcf" class="fa fa-eye"></i>
                </span>
                @* <span asp-validation-for="ConfirmPassword" class="text-danger"></span> *@
            </div>


        <button type="submit" class="btn btn-primary w-100 mt-3">Đăng ký</button>
    </form>

    <p class="text-center mt-2">Bạn đã có tài khoản? <a asp-action="Login">Đăng nhập ngay</a></p>
</div>
<!-- Script để ẩn/hiện mật khẩu -->

