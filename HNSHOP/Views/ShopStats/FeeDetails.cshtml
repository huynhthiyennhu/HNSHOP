@model List<HNSHOP.Dtos.Response.FeeProductDetailDto>
@using System.Globalization

@{
    ViewData["Title"] = "Chi tiết phí bán hàng tháng " + ViewBag.MonthLabel;
}
<section id="cart_items">
    <div class="container p-5">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-action ="SalesFees">Phí bán hàng</a></li>

                <li class="active">Phí bán hàng theo tháng</li>
            </ol>
        </div>
        <h2 class="title text-center">@ViewData["Title"]</h2>
        <div class="table-responsive cart_info">

                <table class="table table-striped table-bordered table-condensed">
    <thead class="thead-dark">
                    <tr class="cart_menu">
                        <th><b>Tên sản phẩm</b></th>
                        <th><b>Số lượng</b></th>
                        <th><b>Đơn giá</b></th>
                        <th><b>Thành tiền</b></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("N0", CultureInfo.GetCultureInfo("vi-VN"))</td>
                <td>@item.Total.ToString("N0", CultureInfo.GetCultureInfo("vi-VN"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" class="text-right">Tổng cộng:</th>
            <th>
                @Model.Sum(x => x.Total).ToString("N0", CultureInfo.GetCultureInfo("vi-VN"))
            </th>
        </tr>
    </tfoot>
</table>
</div>
</div>
</section>
